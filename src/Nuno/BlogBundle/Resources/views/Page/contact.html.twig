{% extends 'NunoBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
	<header>
		<h1>Contact symblog</h1>
	</header>

	{% for flashMessage in app.session.flashbag.get('blogger-notice') %}
    	<div class="blogger-notice">
    		{{ flashMessage }}
    	</div>
	{% endfor %}

	<p>Want to contact symblog?</p>

	{{ form_start(form, {'action': path('NunoBlogBundle_contact'), 'method': 'post', 'attr': {'class': 'blogger'}}) }}
		{{ form_errors(form) }}

		{{ form_row(form.name) }}
		{{ form_row(form.email) }}
		{{ form_row(form.subject) }}
		{{ form_row(form.body) }}

		{{ form_row(form.submit) }}

		<!-- <input type="submit" value="Submit" /> -->
	{{ form_end(form) }}
{% endblock %}